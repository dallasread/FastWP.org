<div class="content">
    <div class="header">
        {{#if current/site}}
            <h2>
                <a href="#!/installations/{{current/site/id}}">{{current/site/name}}</a>
            </h2>

            <ul class="installation-menu menu">
                <li><a href="#!/installations/{{current/site/id}}">Status</a></li>
                <li><a href="#!/installations/{{current/site/id}}/backups">Backups</a></li>
                <li><a href="#!/installations/{{current/site/id}}/history">History</a></li>
                <li><a href="#!/installations/{{current/site/id}}/clone">Clone</a></li>
                <li><a href="#!/installations/{{current/site/id}}/ssl">SSL</a></li>
                <li><a href="#!/installations/{{current/site/id}}/destroy">Destroy</a></li>
            </ul>
        {{else}}
            <h2>
                <a href="#!/">FastWordPress</a>
            </h2>
        {{/if}}

        <ul class="accounts-menu menu">
            <li><a href="#!/">My Installations</a></li>
            <li><a href="#!/my-account">My Account</a></li>
        </ul>
    </div>

    <div class="main" data-main></div>
</div>
