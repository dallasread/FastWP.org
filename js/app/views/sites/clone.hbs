<div class="wrapper wrapper-medium">
    <form action="site-clone" class="form">
        <div class="field">
            <h2>
                Clone {{site/domain}}
            </h2>
            <p>Change the configuration for this site.</p>
        </div>

        <div class="field">
            <label>New Domain</label>
            <input type="text" name="domain" autofocus="true">
        </div>

        <div class="field">
            <button type="submit" class="button secondary">Clone This Site</button>
        </div>
    </form>
</div>
